


  <h4>Discussions</h4>

  <table>
    <thead>
      <tr>
        <th><h6>Topic</h6></th>
        <th><h6>Content</h6></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @discussions.each do |discussion| %>
        <tr>
          <td><%= link_to discussion.topic, discussion %></td>
          <td><%= discussion.content %></td>
          

          <% if user_signed_in? %>
            <td><%= link_to 'Reply', "/discussions/#{discussion.id}", class: "btn waves-effect waves-teal btn-flat" %></td>
          <% end %>
          
         
          <% if user_signed_in? and current_user.owns_discussions?(discussion)%>
            <td><%= link_to 'Delete', discussion, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect wave-teal btn-flat" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  

  <br>

<% if logged_in?(:site_admin, :user) %>
  <%= link_to 'New Discussion', new_discussion_path , class:"btn waves-effect" %>
<% end %>



  
