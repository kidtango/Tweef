
<h4><%= @current_user.first_name %>'s Tank Profiles</h4>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.tank_profiles.each do |tank_profile| %>
      <tr>
				<td><%= link_to tank_profile.profile_name, tank_profile %></td>
        <td><%= link_to 'Edit', edit_tank_profile_path(tank_profile) %></td>
        <td><%= link_to 'Remove Tank', tank_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tank Profile', new_tank_profile_path %>
